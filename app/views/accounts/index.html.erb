<div class="page-header">

<h1>Account Listing</h1>

</div>

<div class="panel panel-primary">
  <!-- Default panel contents -->
  <div class="panel-heading">SupportDesk Registered Accounts</div>
  <div class="panel-body">


<table class="table">
  <tr>
      <th>ID Number</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone</th>
  </tr>
  
  </div>
 
    <% @user.each do |account| %>
      <tr>
        <td><%= account.id %></td>
        <td><%= account.fname %></td>
        <td><%= account.lname %></td>
        <td><%= account.email %></td>
        <td><%= account.phone %></td>
        <td><%= link_to 'Show', account %></td>
        <td><%= link_to 'Edit', edit_account_path(account) %></td>
        <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>

<div class="panel-footer">
  <%= link_to 'New user', signup_path, class: 'btn btn-success' %>
  </div>

  </div>