<% if @user.errors.any? %>
<div id="error_explanations">
  <div class="alert alert-danger">
    The form contains <%= pluralize(@user.errors.count, "errors") %>
  </div>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
    <font color="red"><li><%= msg %></li></font>
    <% end %>
  </ul>
</div>
<% end %>